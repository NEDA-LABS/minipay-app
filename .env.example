# =============================================================================
# NedaPay Merchant Portal - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL database connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/nedapay?schema=public"

# Direct database URL (for Prisma migrations and direct connections)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DIRECT_URL="postgresql://user:password@localhost:5432/nedapay?schema=public"

# -----------------------------------------------------------------------------
# Redis / Upstash KV Configuration
# -----------------------------------------------------------------------------
# Upstash Redis REST API URL for rate limiting and caching
KV_REST_API_URL="https://your-redis-instance.upstash.io"

# Upstash Redis REST API token (read-write)
KV_REST_API_TOKEN="your-upstash-token"

# Upstash Redis REST API read-only token
KV_REST_API_READ_ONLY_TOKEN="your-upstash-read-only-token"

# Redis URL (alternative format)
KV_URL="redis://default:your-password@your-redis-instance.upstash.io:6379"
REDIS_URL="redis://default:your-password@your-redis-instance.upstash.io:6379"

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"

# Supabase anonymous key (public, safe to expose in client)
SUPABASE_ANON_KEY="your-supabase-anon-key"

# Supabase service role key (server-side only, keep secret)
NEXT_PUBLIC_SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# -----------------------------------------------------------------------------
# Privy Authentication
# -----------------------------------------------------------------------------
# Privy App ID (public, safe to expose in client)
NEXT_PUBLIC_PRIVY_APP_ID="your-privy-app-id"

# Privy App Secret (server-side only, keep secret)
PRIVY_APP_SECRET="your-privy-app-secret"

# JWT Secret (for custom JWT token generation and verification)
JWT_SECRET="your-jwt-secret-key"

# Privy JWKS Endpoint (for JWT verification)
PRIVY_JWKS_ENDPOINT="https://auth.privy.io/api/v1/apps/YOUR_APP_ID/.well-known/jwks.json"

# -----------------------------------------------------------------------------
# Sumsub KYC/KYB Configuration
# -----------------------------------------------------------------------------
# Sumsub App Token for API authentication
SUMSUB_APP_TOKEN="your-sumsub-app-token"

# Sumsub Secret Key for HMAC signature generation
SUMSUB_SECRET_KEY="your-sumsub-secret-key"

# Sumsub Base URL (default: https://api.sumsub.com)
SUMSUB_BASE_URL="https://api.sumsub.com"

# Sumsub Webhook Secret for webhook signature verification
SUMSUB_WEBHOOK_SECRET="your-sumsub-webhook-secret"

# -----------------------------------------------------------------------------
# Blockchain RPC Endpoints
# -----------------------------------------------------------------------------
# Coinbase RPC (for Base and other networks)
NEXT_PUBLIC_COINBASE_RPC="https://api.developer.coinbase.com/rpc/v1/base/YOUR_API_KEY"

# Base Network RPC URL (alternative name used in codebase)
NEXT_PUBLIC_COINBASE_BASE_RPC="https://api.developer.coinbase.com/rpc/v1/base/YOUR_API_KEY"
NEXT_PUBLIC_BASE_RPC_URL="https://mainnet.base.org"

# Polygon Network RPC URL
NEXT_PUBLIC_POLYGON_RPC="https://polygon-rpc.com"

# BNB Smart Chain RPC URL
NEXT_PUBLIC_BSC_RPC="https://bsc-dataseed.binance.org"

# Arbitrum Network RPC URL
NEXT_PUBLIC_ARBITRUM_RPC="https://arb1.arbitrum.io/rpc"

# Celo Network RPC URL
NEXT_PUBLIC_CELO_RPC="https://forno.celo.org"

# Scroll Network RPC URL
NEXT_PUBLIC_SCROLL_RPC="https://rpc.scroll.io"

# Optimism Network RPC URL
NEXT_PUBLIC_OPTIMISM_RPC="https://mainnet.optimism.io"

# Lisk Network RPC URL
NEXT_PUBLIC_LISK_RPC="https://rpc.api.lisk.com"

# -----------------------------------------------------------------------------
# Blockchain API Keys
# -----------------------------------------------------------------------------
# BaseScan API Key (for contract verification and blockchain data)
NEXT_PUBLIC_BASESCAN_API_KEY="your-basescan-api-key"

# ChainBase API Key (for blockchain indexing)
CHAINBASE_API_KEY="your-chainbase-api-key"

# -----------------------------------------------------------------------------
# Smart Contract Addresses
# -----------------------------------------------------------------------------
# NedaPay Smart Wallet Factory Contract Address
NEXT_PUBLIC_FACTORY_ADDRESS="0x..."

# -----------------------------------------------------------------------------
# Third-Party Integrations
# -----------------------------------------------------------------------------
# Across Protocol Integrator ID
NEXT_PUBLIC_ACROSS_INTEGRATOR_ID="0x..."

# -----------------------------------------------------------------------------
# Email Service Configuration
# -----------------------------------------------------------------------------
# EmailJS Configuration (for client-side email sending)
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY="your-emailjs-public-key"
NEXT_PUBLIC_EMAILJS_SERVICE_ID="your-emailjs-service-id"
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID="your-emailjs-template-id"

# Mailtrap Configuration (for email testing and production)
MAILTRAP_USER="your-mailtrap-user"
MAILTRAP_PASS="your-mailtrap-password"
MAILTRAP_INVOICE_EMAIL="invoices@yourdomain.com"
MAILTRAP_NEDAPAY_DOMAIN_TOKEN="your-mailtrap-domain-token"
MAILTRAP_TOKEN="your-mailtrap-api-token"

# -----------------------------------------------------------------------------
# Payment Provider Integrations
# -----------------------------------------------------------------------------
# KotaniPay Configuration (for mobile money and bank transfers)
KOTANI_API_BASE="https://api.kotanipay.com"
KOTANI_API_KEY="your-kotanipay-api-key"
KOTANI_API_SECRET="your-kotanipay-api-secret"

# Paycrest Configuration (for fiat off-ramping)
PAYCREST_CLIENT_ID="your-paycrest-client-id"
PAYCREST_CLIENT_SECRET="your-paycrest-client-secret"
PAYCREST_API_URL="https://api.paycrest.io"

# IDRXCO Configuration (for Indonesian Rupiah stablecoin)
IDRXCO_API_KEY="your-idrxco-api-key"
IDRXCO_SECRET_KEY="your-idrxco-secret-key"

# -----------------------------------------------------------------------------
# Biconomy Account Abstraction
# -----------------------------------------------------------------------------
# Biconomy Bundler URL (for gasless transactions)
BICONOMY_BUNDLER_URL="https://bundler.biconomy.io/api/v2/YOUR_CHAIN_ID/YOUR_API_KEY"

# Biconomy Paymaster URL (for gas sponsorship)
BICONOMY_PAYMASTER_URL="https://paymaster.biconomy.io/api/v1/YOUR_CHAIN_ID/YOUR_API_KEY"

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Application host URL (for generating links)
NEXT_PUBLIC_HOST="https://nedapay.xyz"

# Application access secret (for internal API authentication)
NEXT_PUBLIC_APP_ACCESS="your-app-access-secret"

# HMAC secret for payment link signature generation
HMAC_SECRET="your-hmac-secret"

# Encryption key for IDRX credentials (32-byte hex string)
IDRX_ENC_KEY="your-32-byte-encryption-key-in-hex"

# Alternative encryption key name
ENCRYPTION_KEY="your-encryption-key"

# -----------------------------------------------------------------------------
# Admin Configuration
# -----------------------------------------------------------------------------
# Admin wallet addresses (for admin access control)
NEXT_PUBLIC_ADMIN1="0x..."
NEXT_PUBLIC_ADMIN2="0x..."
NEXT_PUBLIC_ADMIN3="0x..."

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable NedaPay protocol features
NEXT_PUBLIC_ENABLE_PROTOCOL="true"

# -----------------------------------------------------------------------------
# Deployment Configuration
# -----------------------------------------------------------------------------
# Node environment (development, production, test)
NODE_ENV="development"

# Netlify deployment flag
NETLIFY="false"
